<h2>Our articles </h2>
<p>
	<%= link_to "New article", new_article_path %>
</p>
<hr />
<p>
	<% @articles.each do |article| %>
		<p>
			<b><%= article.title%></b><br /><br />
			<%= article.text %>
		</p>
		<p>
			<%= link_to "Show", article_path(article) %> | 
			<%= link_to "Edit", edit_article_path(article) %>
		</p>
		<hr />
	<% end %>
</p>