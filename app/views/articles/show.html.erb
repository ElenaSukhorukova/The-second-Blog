
<h2><%= @article.title %></h2>
<p>
	<%= @article.text %>
</p>

<h3>Comments</h3>

<% @comments.each do |comment| %>
	<p>
		<b><%= comment.author %> said: </b><br />
		<i><%= comment.body %></i>
	</p>
<% end %>

<h3>Add comments</h3>

<%= form_for([@article, @article.comments.build]) do |f| %>
	<p>
		<%= f.label :author %><br /><br />
		<%= f.text_field :author %>
	</p>
	<p>
		<%= f.label :body %><br /><br />
		<%= f.text_area :body %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>

<p>
	<%= link_to "Return by all articles", articles_path %>
</p>

