<h1><%= t("contacts.contact_us") %></h1>
<br />
<br />

<%= form_for :contact, url: contacts_path, data: { turbo: false } do |f| %>
	
	<% if @contact && @contact.errors.any? %>
		<p>
			<ul>
			<% @contact.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</p>
	<% end %>

	<div class="col-xs-12 col-sm-12 col-md-12, col-lg-12">
		<p>
			<%= f.label :name, class: "form-label" %><br />
			<%= f.text_field :name, class: "form-control" %>
		</p>

		<p>
			<%= f.label :email, class: "form-label"  %><br />
			<%= f.text_field :email, class: "form-control" %>
		</p>

		<p>
			<%= f.label :message, class: "form-label"  %><br />
			<%= f.text_area :message, class: "form-control" %>
		</p>

		<p>
			<%= f.submit 'Send message', class: "btn btn-light" %>
		</p>
	</div>

<% end %>